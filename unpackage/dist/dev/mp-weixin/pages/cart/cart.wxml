<view class="container"><block wx:if="{{!hasLogin}}"><view class="no-login"><view class="c"><view class="imagesize logo"></view><view class="imagesize"><image class="in-image" src="{{noLoginPicUrl}}"></image></view><text>未登录</text><text class="tip">登录后继续浏览购物车商品!</text><button data-event-opts="{{[['tap',[['goLogin',['$event']]]]]}}" bindtap="__e">去登录</button></view></view></block><block wx:else><view class="login"><block wx:if="{{$root.g0<=0}}"><view class="no-cart"><view class="c"><view class="imagesize"><image class="in-image" src="{{noProductPicUrl}}"></image></view><text>购物车为空</text><navigator class="btn" url="/pages/home/home" open-type="switchTab">前去购物</navigator></view></view></block><block wx:else><view class="cart-view"><view class="checkAll"><checkbox-group data-event-opts="{{[['change',[['checkedAll',['$event']]]]]}}" bindchange="__e"><checkbox value="{{all}}" checked="{{checkedAllStatus}}"><label class="checkAllSpan _span">全选</label><label class="checkAllNum _span">{{"（共"+cartTotal.checkedGoodsCount+"件）"}}</label></checkbox></checkbox-group></view><view class="list"><scroll-view class="scrl" scroll-y="{{true}}"><view class="group-item"><view class="goods"><block wx:for="{{cartGoods}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="item"><u-row vue-id="{{'1775f8c0-1-'+index}}" bind:__l="__l" vue-slots="{{['default']}}"><u-col vue-id="{{('1775f8c0-2-'+index)+','+('1775f8c0-1-'+index)}}" span="1" bind:__l="__l" vue-slots="{{['default']}}"><view class="u_check"><checkbox-group data-event-opts="{{[['change',[['checkedItem',['$0'],[[['cartGoods','id',item.id]]]]]]]}}" bindchange="__e"><checkbox class="check" value="{{index}}" data-item-index="{{index}}" checked="{{item.checked}}"></checkbox></checkbox-group></view></u-col><u-col vue-id="{{('1775f8c0-3-'+index)+','+('1775f8c0-1-'+index)}}" offset="1" bind:__l="__l" vue-slots="{{['default']}}"><view data-event-opts="{{[['tap',[['goGoodsShop',['$0'],[[['cartGoods','id',item.id,'goodsSn']]]]]]]}}" class="cart-goods" bindtap="__e"><image class="img" src="{{item.picUrl}}" background-size="contain"></image><view class="info"><view class="name"><text>{{item.goodsName}}</text></view><view class="b"><text class="price">{{"￥"+item.price}}</text><view class="selnum"><view class="cut" data-item-index="{{index}}" data-event-opts="{{[['tap',[['cutNumber',['$event']]]]]}}" catchtap="__e">-</view><input class="number" disabled="{{true}}" type="number" value="{{item.number}}"/><view class="add" data-item-index="{{index}}" data-event-opts="{{[['tap',[['addNumber',['$event']]]]]}}" catchtap="__e">+</view></view></view></view></view></u-col></u-row><u-line vue-id="{{'1775f8c0-4-'+index}}" bind:__l="__l"></u-line></view></block></view></view></scroll-view></view><view class="cart-bottom"><view class="solo"></view><view class="total">{{'总计：￥'+cartTotal.checkedGoodsAmount}}</view><view class="action_btn_area"><view data-event-opts="{{[['tap',[['checkoutOrder',['$event']]]]]}}" class="checkout" bindtap="__e">{{"去结算("+cartTotal.checkedGoodsCount+"件)"}}</view></view></view></view></block></view></block></view>