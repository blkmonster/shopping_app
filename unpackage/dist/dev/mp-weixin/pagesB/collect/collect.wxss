page {
    height: 100%;
    min-height: 100%;
    background: #f4f4f4;
}
.container {
    background: #fff;
    width: 100%;
    height: auto;
    min-height: 100%;
    overflow: hidden;
}
.u-menu-wrap {
	flex: 1;
	display: flex;
	overflow: hidden;
	padding-left: 30rpx;
}
.right-box {
	background-color: rgb(250, 250, 250);
	height: 78vh;
}
.page-view {
	padding: 5rpx;
	width: 100%;
}
.class-item {
	background-color: #fff;
	padding: 10rpx;
	border-radius: 8rpx;
}
.item-title {
	font-size: 30rpx;
	color: $u-main-color;
	font-weight: bold;
}
.item-container {
	display: flex;
	flex-wrap: wrap;
	/* margin-top: 20rpx; */
}
.thumb-box {
	margin-top: 10rpx;
	margin-bottom: 10rpx;
	height: 220rpx;
	display: flex;
	background-color: #f0f0f0;
	justify-content: center;
	flex-direction: column;
	border-radius: 20rpx;
	padding-left: 10rpx;
}
.item-menu-image {
	width: 190rpx;
	height: 190rpx;
	margin-top: 8rpx;
	background-color: #fff;
	border-radius: 20rpx;
}
.line-2 {
	font-weight: 800;
	font-size: 26rpx;
	margin-right: 10rpx;
	color: $u-main-color;
	width: 300rpx;
	font-weight: bold;
}
.line-3 {
	font-size: 22rpx;
	margin-top: 10rpx;
	margin-right: 10rpx;
	color: #666;
}
.line-4 {
	font-size: 25rpx;
	font-weight: 600;
	margin-top: 5rpx;
	color: #ff0000;
}
.line-5 {
	font-size: 30rpx;
	font-weight: 800;
	margin-top: 10rpx;
	color: #55ff7f;
}
.txt2 {
	text-align: center;
}
.txt2 text {
	font-size: 40rpx;
	color: #8c8c8c;
	margin-top: 50%;
}
.lb {
	height: 20rpx;
	background-color: rgb(250, 250, 250);
}

