.comment {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
}
.left {
  width: 50%;
  display: flex;
  justify-content: flex-start;
}
.right {
  width: 50%;
  display: flex;
  justify-content: flex-end;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #000000;
}
.grid-container {
	width: 100vw;
	height: 50vh;
	background-color: #f0f0f0;
}
.grid-item {
  width: calc(50% - 40rpx);
  position: relative;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.goods-img {
  width: 330rpx;
  height: 240rpx;
  object-fit: cover;
  border-top-left-radius: 10%;
  border-top-right-radius: 10%;
}
.goods-info {
	bottom: 0;
	left: 0;
	right: 0;
	width: 268rpx;
	padding: 16px;
	background-color: #fff;
	color: #000000;
	border-bottom-right-radius: 10%;
	border-bottom-left-radius: 10%;
}
.goods-name {
  font-size: 30rpx;
  font-weight: 800;
  margin-bottom: 8px;
}
.goods-desc {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8px;
}
.goods-price {
  font-size: 18px;
  font-weight: bold;
  color: #ff0000;
}
.recommend-title {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  font-size: 20px; /* 放大字体 */
  font-weight: bold; /* 加粗字体 */
  color: #000; /* 白色字体 */
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

